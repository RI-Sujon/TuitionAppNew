<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".message_box.MainMessageActivity">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border3"
                app:tabIndicatorColor="@color/RoyalBlue"
                app:tabSelectedTextColor="#FFF"
                app:tabTextColor="#fff">

                <TextView
                    android:id="@+id/toolbar_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Chats"
                    android:layout_marginRight="80dp"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textStyle="bold" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>



        <androidx.viewpager.widget.ViewPager
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/view_pager_message"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scrollbarDefaultDelayBeforeFade="@integer/google_play_services_version" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/chats_button"
                android:text="Chats"
                android:layout_marginLeft="40dp"
                android:textAllCaps="false"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chat_icon"
                />

            <ImageView
                android:id="@+id/message_request_button"
                android:text="Requests"
                android:layout_marginLeft="195dp"
                android:textAllCaps="false"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/message_request"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/fragment_text01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textColor="@color/Black"
                android:layout_marginLeft="37dp"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/fragment_text02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="Requests"
                android:layout_marginLeft="182dp"
                android:textSize="16sp"/>

        </LinearLayout>



    </LinearLayout>





</LinearLayout>
