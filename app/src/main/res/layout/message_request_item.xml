<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_circle_background_color="@color/Black"
        android:id="@+id/requester_profile_image"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/requester_username"
        android:textColor="@color/Black"
        android:layout_toRightOf="@id/requester_profile_image"
        android:layout_toEndOf="@id/requester_profile_image"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/request_msg"
        android:text="Someone sent you a message request"
        android:textColor="@color/DarkBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requester_username"
        android:layout_toRightOf="@+id/requester_profile_image"
        android:layout_marginLeft="15dp"
        android:paddingTop="5dp"
        android:maxLines="2"
        />

</RelativeLayout>