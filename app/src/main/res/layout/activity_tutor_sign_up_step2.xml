<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".candidate_tutor.TutorSignUpActivityStep2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/registration1_background">
        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/registration_text"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="30dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/r2"
                    android:layout_marginTop="170dp"
                    android:layout_marginStart="45dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:src="@drawable/registration_white_board"
                    android:layout_centerHorizontal="true"/>

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="350dp"
                    android:layout_marginTop="222dp"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_id_pic_text"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"/>
                    <ImageView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:id="@+id/imgView"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:src="@drawable/add_pic"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:onClick="selectImage"/>
                    <TextView
                        android:id="@+id/filePathName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/uribar"
                        android:textSize="13dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_reference_text"
                        android:layout_marginTop="40dp"
                        android:layout_gravity="center_horizontal"/>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reference1: "
                            android:textSize="11dp"
                            android:textColor="@color/RoyalBlue"
                            android:layout_marginTop="-3dp"
                            android:layout_marginRight="10dp"/>
                        <EditText
                            android:id="@+id/reference1"
                            android:layout_width="180dp"
                            android:layout_height="27dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="14dp"
                            android:background="@drawable/reference_edit_text"
                            android:inputType="textEmailAddress"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reference2: "
                            android:textSize="11dp"
                            android:textColor="@color/RoyalBlue"
                            android:layout_marginRight="10dp"/>
                        <EditText
                            android:id="@+id/reference2"
                            android:layout_width="180dp"
                            android:layout_height="27dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textSize="14dp"
                            android:background="@drawable/reference_edit_text"
                            android:inputType="textEmailAddress"/>

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:id="@+id/nextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="600dp"
                    android:layout_marginStart="215dp"
                    android:background="@drawable/next_button"
                    android:onClick="candidateTutorRegistrationCompletion"/>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>