<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:civ_circle_background_color="@color/Black"
        android:id="@+id/requester_profile_image"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/requester_username"
        android:textColor="@color/Black"
        android:layout_toRightOf="@id/requester_profile_image"
        android:layout_toEndOf="@id/requester_profile_image"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/request_msg"
        android:text="Someone sent you a message request"
        android:textColor="#3498DB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requester_username"
        android:layout_toRightOf="@+id/requester_profile_image"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:maxLines="2"
        />

    <TextView
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:id="@+id/request_accept_button"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_text_view"
        android:textSize="13sp"
        android:textColor="@color/White"
        android:text="Accept"
        android:textStyle="bold"
        android:backgroundTint="#336DFF"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/request_delete_button"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="#EAEBEE"
        android:background="@drawable/rounded_text_view"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_toLeftOf="@+id/request_accept_button"
        android:text="Delete"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:textSize="13sp"
        />


</RelativeLayout>