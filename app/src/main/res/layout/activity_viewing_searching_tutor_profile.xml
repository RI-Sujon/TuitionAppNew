<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Bisque"
    tools:context=".guardian.ViewingSearchingTutorProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/border3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/border3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:background="#00000000"
                    android:padding="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    android:onClick="backToHomePage"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/backButton"
                    android:layout_toLeftOf="@+id/filter_option">
                    <EditText
                        android:id="@+id/search_bar"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingStart="45dp"
                        android:background="@drawable/border_search_bar"
                        android:hint="Search"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_marginStart="7dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/search_icon"/>
                </RelativeLayout>


                <ImageButton
                    android:id="@+id/filter_option"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/filter_icon"
                    android:background="#00000000"
                    android:layout_marginLeft="2dp"
                    android:visibility="visible"
                    android:padding="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>

            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:background="@drawable/border_search_bar"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tutor_list_button"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="TUTOR"
                app:cornerRadius="30dp"
                android:padding="0dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:backgroundTint="#2c30e7" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tutorListViewButton"
                android:layout_width="140dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="TUTOR"
                android:textColor="@color/Gray"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:background="#00000000"
                android:visibility="gone"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/group_list_button"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:text="GROUP"
                app:cornerRadius="30dp"
                android:padding="0dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:visibility="gone"
                android:backgroundTint="#2c30e7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/groupListViewButton"
                android:layout_width="140dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="GROUP"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/Gray"
                android:background="#00000000"/>

        </LinearLayout>
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/tutorListLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="0dp">

                <ListView
                    android:id="@+id/verifiedTutorList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:dividerHeight="5dp"
                    android:divider="#00000000"
                    android:padding="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupListLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/groupList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:dividerHeight="1dp"
                    android:padding="20dp" />
            </LinearLayout>
        </ViewFlipper>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>